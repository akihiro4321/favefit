rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ログイン済みかどうかのヘルパー関数
    function isAuthenticated() {
      return request.auth != null;
    }

    // 操作対象のユーザーが自分自身かどうかのヘルパー関数
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ユーザー情報
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // サブコレクション（recipes, feedbacks）
      match /{allSubcollections=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // 食事プラン
    match /plans/{planId} {
      // 作成時はリクエストデータ内の userId が自分のものであること
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // 読み取り・更新・削除は既存データの userId が自分のものであること
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // 買い物リスト
    match /shoppingLists/{planId} {
      // 対応する plan の所有者であることを確認（get を使用）
      // shoppingLists は planId をドキュメントIDとして使っているため、plans/{planId} を取得して userId を確認する
      allow read, write: if isAuthenticated() && 
        get(/databases/$(database)/documents/plans/$(planId)).data.userId == request.auth.uid;
    }

    // レシピ履歴・お気に入りレシピ
    match /recipeHistory/{userId}/{allSubcollections=**} {
      allow read, write: if isOwner(userId);
    }
    match /favoriteRecipes/{userId}/{allSubcollections=**} {
      allow read, write: if isOwner(userId);
    }

    // 市場価格（読み取り専用）
    match /marketPrices/{document} {
      allow read: if isAuthenticated();
      allow write: if false; // 管理者・システム側のみ
    }
  }
}
