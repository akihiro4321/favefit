rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ヘルパー関数: ユーザーが認証済みか確認
    function isAuthenticated() {
      return request.auth != null;
    }

    // ヘルパー関数: リクエストしたユーザーが対象のユーザーか確認
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // ユーザードキュメント: 自分のデータのみアクセス可能
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // ユーザーのpreferencesサブコレクション
      match /preferences/{preferenceId} {
        allow read, write: if isOwner(userId);
      }

      // ユーザーのrecipesサブコレクション
      match /recipes/{recipeId} {
        allow read, write: if isOwner(userId);
      }

      // ユーザーのfeedbacksサブコレクション
      match /feedbacks/{feedbackId} {
        allow read, write: if isOwner(userId);
      }

      // ユーザーのtasteLogsサブコレクション
      match /tasteLogs/{logId} {
        allow read, write: if isOwner(userId);
      }

      // ユーザーのdietPlansサブコレクション
      match /dietPlans/{planId} {
        allow read, write: if isOwner(userId);
      }
    }

    // マスターデータ: 全ユーザーが読み取り可能、書き込みは不可
    match /masterData/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false;  // 管理者のみ（Firebaseコンソール経由）
    }

    // その他のドキュメント: デフォルトで拒否
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
